ul#user-dropdown.dropdown-content
  li: a(href='/settings') Dash Settings
    i.material-icons.left settings
  li: a(href='/services') Connected Services
    i.material-icons.left settings_input_antenna
  //- Add other services here later
  if batches && batches.length > 0
    li: a(href='#', onclick='dismiss("all", null, $(".card")); return false;') Clear All Updates
      i.material-icons.left clear
nav.blue.darken-3
  div.nav-wrapper
    a.brand-logo(href='/') Dash
    ul.nav-mobile.right.hide-on-med-and-down
      if (locals.login)
        li: a.dropdown-button(href='#', data-activates='user-dropdown') #{locals.greeting}, #{locals.displayName}!
          i.material-icons.right arrow_drop_down
          img.avatar.left(src=locals.avatar)
        if connected
          li: a#refresh(href='#', onclick='refresh(); return false;')
            i.material-icons refresh
        li: a(href='/logout') Logout